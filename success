<script>
// Get data from URL parameters
const urlParams = new URLSearchParams(window.location.search);
const number = urlParams.get('number');
const station = urlParams.get('station');
const timestamp = urlParams.get('timestamp');

// Display the data
if (number) {
  document.getElementById('numberValue').textContent = number;
}
if (station) {
  document.getElementById('stationValue').textContent = station;
}
if (timestamp) {
  const date = new Date(timestamp);
  document.getElementById('timestampValue').textContent = 'Submitted: ' + date.toLocaleString();
}

// If no success parameter, redirect to main form
if (!urlParams.get('success')) {
  window.location.href = 'https://cstainton88.github.io/stationlist/';
}
</script>

